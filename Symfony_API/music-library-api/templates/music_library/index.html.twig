{# templates/music_library/index.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bibliothèque Musicale</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #111;
            color: #fff;
            overflow-x: hidden;
        }

        /* Navbar styles */
        .navbar.scrolled {
            background-color: #333;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .navbar {
            padding: 1rem 0;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 999;
            background: transparent;
            transition: background-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

        .navbar-nav {
            margin: 0 auto;
        }

        .navbar-nav .nav-link {
            color: #fff;
            margin-right: 15px;
            position: relative;
            padding-bottom: 5px;
        }

        .navbar-nav .nav-link.active, 
        .navbar-nav .nav-link:hover {
            color: #f0ad4e;
        }

        .navbar-nav .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            background-color: #f0ad4e;
            bottom: 0;
            left: 50%;
            transition: all 0.3s ease;
        }

        .navbar-nav .nav-link.active::after, 
        .navbar-nav .nav-link:hover::after {
            width: 100%;
            left: 0;
        }

        .navbar-nav .nav-link.active {
            color: #f0ad4e;
        }

        .search-section{
            padding: 10vh;
        }

        .search-filters {
            margin-top: 20px; /* Espace entre la navbar et la barre de recherche */
            margin-bottom: 20px; /* Espace sous la barre de recherche */
        }

        .search-bar {
            transition: box-shadow 0.3s ease, transform 0.3s ease;
        }

        .search-bar:focus {
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            transform: scale(1.02);
        }

        /* Filters */
        .filters select {
            max-width: 150px;
            margin-left: 10px;
            transition: transform 0.3s ease;
        }

        .filters select:hover {
            transform: scale(1.1);
        }

        /* Smooth scrolling effect for filters */
        .filters select:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 4px 8px rgba(0, 123, 255, 0.2);
        }

        /* Cards */
        .song-card {
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            color: white;
            display: flex;
            justify-content: center;
            align-items: flex-end;
            text-shadow: 0 1px 5px rgba(0, 0, 0, 0.7);
        }
        .song-card img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
        }
        .song-card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        /* Scroll arrow */
        .scroll-arrow {
            cursor: pointer;
            font-size: 2rem;
            color: white;
            transition: color 0.3s ease;
        }
        .scroll-arrow:hover {
            color: #007bff;
        }

        /* Footer */
        footer {
            background-color: #222;
            color: #fff;
            padding: 20px 0;
            margin-top: 5vh;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="{{ path('music_library') }}">Music Library</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto"> 
                    <li class="nav-item"><a class="nav-link" href="{{ path('artist_page') }}">Artists</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('album_page') }}">Albums</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('song_page') }}">Songs</a></li>
                </ul>
            </div>
        </div>
    </nav>


    <section id="search" class="search-section">
        <div class="container search-filters">
            <div class="row align-items-center">
                <!-- Search Bar -->
                <div class="col-md-8">
                    <input type="text" class="form-control search-bar" placeholder="Rechercher...">
                </div>

                <!-- Filters -->
                <div class="col-md-4 d-flex justify-content-end filters">
                    <select class="form-select me-2">
                        <option>Date</option>
                        <option>2024</option>
                        <option>2023</option>
                    </select>
                    <select class="form-select me-2">
                        <option>Type</option>
                        <option>Pop</option>
                        <option>Rock</option>
                    </select>
                    <select class="form-select">
                        <option>Durée</option>
                        <option>&lt; 3 min</option>
                        <option>3-5 min</option>
                        <option>&gt; 5 min</option>
                    </select>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <div class="section-title">Musique</div>
        <div class="d-flex align-items-center mt-3">
            <div class="flex-grow-1 d-flex flex-wrap gap-3">
                {% for song in songs %}
                    <a href="{{ path('song_details', {'artistId': song.album.artist.id, 'albumId': song.album.id, 'songId': song.id}) }}" class="text-decoration-none">
                        <div class="song-card text-center" style="width: 200px; height: 200px;">
                            <img src="/media/{{ song.image }}" alt="{{ song.title }}" class="img-fluid w-100 h-100">
                            <div>{{ song.title }}</div>
                        </div>
                    </a>
                {% endfor %}
            </div>
            <div class="scroll-arrow ms-3">&rarr;</div>
        </div>

        <div class="section-title mt-5">Artistes</div>
        <div class="d-flex align-items-center mt-3">
            <div class="flex-grow-1 d-flex flex-wrap gap-3">
                {% for artist in artists %}
                    <a href="{{ path('artist_details', {'id': artist.id}) }}" class="text-decoration-none">
                        <div class="song-card text-center" style="width: 200px; height: 200px;">
                            <img src="/media/{{ artist.image }}" alt="{{ artist.name }}" class="card-img-top">
                            <div class="card-body">{{ artist.name }}</div>
                        </div>
                    </a>
                {% endfor %}
            </div>
            <div class="scroll-arrow ms-3">&rarr;</div>
        </div>

        <div class="section-title mt-5">Albums</div>
        <div class="d-flex align-items-center mt-3">
            <div class="flex-grow-1 d-flex flex-wrap gap-3">
                {% for album in albums %}
                <a href="{{ path('albums_details', {'artistId': album.artist.id, 'albumId': album.id}) }}" class="text-decoration-none">
                    <div class="song-card p-3  text-center" style="width: 200px; height: 200px;">
                        <img src="/media/{{ album.image }}" alt="{{ album.title }}" class="img-fluid w-100 h-100">
                        <div>{{ album.title }}</div>
                    </div>
                </a>
                {% endfor %}
            </div>
            <div class="scroll-arrow ms-3">&rarr;</div>
        </div>
    </div>

    <footer>
        &copy; 2024 Bibliothèque Musicale | Tous droits réservés.
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Change navbar background on scroll
        const navbar = document.querySelector('.navbar');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });
    </script>
</body>
</html>
