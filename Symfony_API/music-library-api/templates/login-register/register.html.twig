{# templates/register.html.twig #}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Inscription - Music Library</title>
        <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,600&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: 'Poppins', sans-serif;
                background: linear-gradient(135deg, #141e30, #243b55);
            }
            
            .navbar.scrolled {
                background-color: #333;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

            .navbar {
                padding: 1rem 0;
                position: fixed;
                width: 100%;
                top: 0;
                z-index: 999;
                background: transparent;
                transition: background-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
            }
            .navbar-nav {
                margin: 0 auto;
            }
            .navbar-nav .nav-link {
                color: #fff;
                margin-right: 15px;
                position: relative;
                padding-bottom: 5px;
            }
            .navbar-nav .nav-link.active, 
            .navbar-nav .nav-link:hover {
                color: #f0ad4e;
            }
            .navbar-nav .nav-link::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                background-color: #f0ad4e;
                bottom: 0;
                left: 50%;
                transition: all 0.3s ease;
            }
            .navbar-nav .nav-link.active::after, 
            .navbar-nav .nav-link:hover::after {
                width: 100%;
                left: 0;
            }
            
            section{
                margin-top: 10vh;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 90vh;
            }
            .container_login {
                background: rgba(255,255,255,0.1);
                border-radius: 10px;
                overflow: hidden;
                box-shadow: 0 8px 16px rgba(0,0,0,0.3);
                display: flex;
                max-width: 900px;
                width: 100%;
            }
            .container_login .image-section {
                width: 50%;
                background: url('https://source.unsplash.com/800x800/?concert') no-repeat center center;
                background-size: cover;
            }
            
            .container_login .form-section {
                width: 50%;
                padding: 40px;
                display: flex;
                flex-direction: column;
                justify-content: center;
                background: rgba(0, 0, 0, 0.7);
                position: relative;
                overflow: hidden;
            }
            .form-section h1 {
                font-size: 2.5rem;
                color: #fff;
                margin-bottom: 20px;
                text-align: center;
            }

            .register-card {
                background: rgba(255,255,255,0.15);
                padding: 30px;
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0,0,0,0.2);
                backdrop-filter: blur(5px);
            }
            .register-card form {
                display: flex;
                flex-direction: column;
            }
            .register-card label {
                color: #fff;
                margin-bottom: 5px;
                font-size: 1rem;
            }
            .register-card input {
                padding: 12px;
                margin-bottom: 20px;
                border: 2px solid transparent;
                border-radius: 5px;
                font-size: 1rem;
                background: rgba(255,255,255,0.2);
                color: #fff;
                outline: none;
                transition: border-color 0.3s ease, background 0.3s ease;
            }
            .register-card input:focus {
                border-color: #1db954;
                background: rgba(255,255,255,0.25);
            }
            .register-card button {
                padding: 12px;
                border: none;
                border-radius: 5px;
                background: #1db954;
                color: #fff;
                font-size: 1rem;
                cursor: pointer;
                transition: background 0.3s ease;
            }
            .register-card button:hover {
                background: #17a44b;
            }
            @media screen and (max-width: 768px) {
                .container_login {
                    flex-direction: column;
                }
                .container_login .image-section,
                .container_login .form-section {
                    width: 100%;
                }
                .container_login .image-section {
                    height: 300px;
                }
            }
            /* Footer */
            footer {
                background-color: #222;
                color: #fff;
                padding: 20px 0;
                margin-top: 5vh;
                text-align: center;
            }
        </style>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
            <a class="navbar-brand" href="{{ path('music_library') }}">Music Library</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                <li class="nav-item"><a class="nav-link" href="{{ path('artist_page') }}">Artists</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('album_page') }}">Albums</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('song_page') }}">Songs</a></li>
                </ul>
            </div>
            </div>
        </nav>
        
        <section>
            <div class="container_login animate__animated animate__fadeIn">
                <div class="image-section"></div>
                <div class="form-section">
                    <h1>Inscription</h1>
                    <div class="register-card animate__animated animate__zoomIn">
                        <form id="registerForm" method="POST" action="/register">
                            <label for="email">Email :</label>
                            <input type="email" id="email" name="email" required>
                            
                            <label for="username">Nom d'utilisateur :</label>
                            <input type="text" id="username" name="username" required>
                            
                            <label for="password">Mot de passe :</label>
                            <input type="password" id="password" name="password" required>
                            
                            <label for="confirmPassword">Confirmer le mot de passe :</label>
                            <input type="password" id="confirmPassword" name="confirmPassword" required>
                            
                            <button type="submit">Créer mon compte</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/gsap.min.js"></script>
        <script>
            gsap.from(".form-section", { duration: 1, x: 100, opacity: 0, ease: "power3.out" });
            gsap.from(".image-section", { duration: 1, x: -100, opacity: 0, ease: "power3.out", delay: 0.5 });
            gsap.from(".register-card", { duration: 1, scale: 0.8, opacity: 0, ease: "back.out(1.7)", delay: 1 });
            gsap.from("#registerForm label", {
                duration: 0.8, 
                opacity: 0, 
                y: 20, 
                stagger: 0.1,
                delay: 1.5
            });
            gsap.from("#registerForm input", {
                duration: 0.8, 
                opacity: 0, 
                y: 20, 
                stagger: 0.1,
                delay: 1.7
            });
            gsap.from("#registerForm button", { duration: 0.8, opacity: 0, y: 20, delay: 2 });
        </script>
        
        <footer>
            &copy; 2024 Bibliothèque Musicale | Tous droits réservés.
        </footer>
        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
